---
export interface Props {
  title: string;
  description: string;
  link?: string;
  date: string;
}
const { title, description, link, date } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-sky-400 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time
  class="mb-1 text-sm font-normal leading-none text-sky-700/100 dark:text-sky-200/80"
  >{date}</time
>
<h3 class="text-lg font-bold text-blue-500 dark:text-blue-300 mt-2">
  {title}
</h3>
<p class="mb-4 text-base font-normal text-black dark:text-gray-200 text-pretty">
  {description}
</p>

<a
  href={link}
  class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-slate-300 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 hover:scale-110 transition dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700"
>
  More info... {""}
  <svg
    class="w-3 h-3 ms-2 rtl:rotate-180"
    aria-hidden="true"
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 14 10"
  >
    <path
      stroke="currentColor"
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M1 5h12m0 0L9 1m4 4L9 9"></path>
  </svg>
</a>
